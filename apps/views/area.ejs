<div class="mainmenu-area">
    <div class="container">
        <div class="row">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-current">
                    <% pages.forEach(function(page){%>
                        <%if(page.slug == 'category') {%>
                            <li class="<%= page.slug ? 'active' : ''%>"><a href="/products/<%=page.slug%>"><%=page.title%></a></li>
                        <%}else if(page.slug == 'home'){%>
                            <li class="<%= page.slug == 'category' ? 'active' : ''%>"><a href="/"><%=page.title%></a></li>
                        <%}else {%>
                            <li><a href="/<%= page.slug%>"><%=page.title%></a></li>
                        <%}%>  
                    <%})%>
                </ul>
            </div>
        </div>
    </div>
</div> <!-- End mainmenu area -->